{
  "compilerOptions": {
    "target": "es2016",                  
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                    
    "noImplicitAny": true,                     
    "strictNullChecks": false,             
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
  },
  "include": [
    "src/**/*"
  ],
}
